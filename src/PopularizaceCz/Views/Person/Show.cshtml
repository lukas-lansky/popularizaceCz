@model PopularizaceCz.ViewModels.PersonViewModel
@{
    ViewBag.Title = ("Profil popularizátora: " + Model.DbModel.Name);
}

<h2>Profil popularizátora: @Model.DbModel.Name</h2>

<h3>Evidované přednášky</h3>

<ul>
    @foreach (var talk in Model.DbModel.Talks)
    {
        <li>@talk.Start.ToString("d. M. yyyy"): @Html.ActionLink(talk.Name, "Show", "Talk", new { id = talk.Id })</li>
    }
</ul>