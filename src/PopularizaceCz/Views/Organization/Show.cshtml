@model PopularizaceCz.ViewModels.OrganizationViewModel
@{
    ViewBag.Title = ("Profil organizace: " + Model.DbModel.Name);
}

<h2>Profil organizace: @Model.DbModel.Name</h2>

@if (!string.IsNullOrEmpty(Model.DbModel.Url))
{
    <p>Webové stránky: <a href="@Model.DbModel.Url">@Model.DbModel.Url</a></p>
}

<h3>Přednášky</h3>

<ul>
    @foreach (var talk in Model.DbModel.Talks)
    {
        <li>@talk.Start.ToString("d. M. yyyy"): @Html.ActionLink(talk.Name, "Show", "Talk", new { id = talk.Id })</li>
    }
</ul>